<?xml version="1.0" encoding="utf-8"?>
<!-- Este es el contenedor principal de mi pantalla "Acerca de". -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AcercaDeActivity">

    <!-- Aquí pongo mi barra de navegación inferior, que es la misma que uso en las otras pantallas. -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarbotones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" 
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.Material3.ActionBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Uso un ScrollView para que se pueda ver el contenido, aunque la pantalla sea pequeña -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/toolbarbotones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <!-- Esta es la card principal que contiene toda la información de "Acerca de". -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <!-- Dentro de la tarjeta, uso un LinearLayout vertical para colocar los elementos uno encima de otro. -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Este es el título de la tarjeta, que pone "VitalFit". -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/acerca_de_card_title"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Aquí es donde muestro la imagen de la readaptación. -->
                <ImageView
                    android:id="@+id/imagen_readaptacion"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@mipmap/ic_imagen_readaptacion_foreground" />

                <!-- y para finalizar, pongo el párrafo largo que explica qué es VitalFit. -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/acerca_de_card_content" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>