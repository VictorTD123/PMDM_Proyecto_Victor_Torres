<?xml version="1.0" encoding="utf-8"?>
<!-- Este es el contenedor principal de mi pantalla "Mis Citas". -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MisCitasActivity">

    <!-- Este es el título de la pantalla. -->
    <TextView
        android:id="@+id/tvTituloMisCitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/title_mis_citas"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Aquí es donde mostraré la lista con todas mis citas reservadas. -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMisCitas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloMisCitas"
        app:layout_constraintBottom_toTopOf="@+id/toolbarbotones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_cita" />

    <!-- Esta es mi Toolbar la misma que uso en las otras pantallas. -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarbotones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.Material3.ActionBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>